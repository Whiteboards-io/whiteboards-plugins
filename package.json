{
  "name": "@whiteboards-io/plugins",
  "version": "1.8.2",
  "description": "This is a library which can be used for development of plugins to Whiteboards.io app",
  "author": "Spartez Software <support@spartez-software.com>",
  "repository": "https://github.com/Whiteboards-io/whiteboards-plugins",
  "license": "MIT",
  "keywords": [
    "typescript",
    "whiteboards",
    "plugins"
  ],
  "files": [
    "lib/",
    "src/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "yarn clean && tsc -p tsconfig.json",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "husky": "^6.0.0",
    "jest": "26.6.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "release-it": "^14.7.0",
    "ts-jest": "^26.5.4",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "ngrok": "^4.3.1",
    "yarn": "^1.22.10"
  },
  "prettier": {
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  }
}
